<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>
        <%= title %>
    </title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="/plugins/fontawesome-free/css/all.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="/dist/css/adminlte.min.css">
</head>

<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-dark navbar-lightblue">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
            </ul>

            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" data-widget="fullscreen" href="#" role="button">
                        <i class="fas fa-expand-arrows-alt"></i>
                    </a>
                </li>
            </ul>
        </nav>
        <!-- /.navbar -->

        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-light-info elevation-4">
            <!-- Brand Logo -->
            <a href="#" class="brand-link">
                <img src="/dist/img/UKM.jpg" alt="AdminLTE Logo" class="brand-image img-circle elevation-3"
                    style="opacity: .8">
                <span class="brand-text font-weight-light">IT UKM</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user panel (optional) -->
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="/dist/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
                    </div>
                    <div class="info">
                        <a href="#" class="d-block">
                            <%= username ? username : 'Guest' %>
                        </a>
                    </div>
                </div>

                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu"
                        data-accordion="false">
                        <% if (role==='Admin' ) { %>
                            <li class="nav-item">
                                <a href="/users" class="nav-link">
                                    <i class="nav-icon fas fa-carrot"></i>
                                    <p>
                                        Users
                                    </p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="/fakultas" class="nav-link">
                                    <i class="nav-icon fas fa-crown"></i>
                                    <p>
                                        Fakultas
                                    </p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="/prodi" class="nav-link">
                                    <i class="nav-icon fas fa-carrot"></i>
                                    <p>
                                        Program Studi
                                    </p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="/beasiswa" class="nav-link">
                                    <i class="nav-icon fas fa-crown"></i>
                                    <p>
                                        Beasiswa
                                    </p>
                                </a>
                            </li>
                            <% } else if (role==='Fakultas' ) { %>
                                <li class="nav-item">
                                    <a href="/fakultas/listProdi" class="nav-link">
                                        <i class="nav-icon fas fa-crown"></i>
                                        <p>
                                            Daftar Program Studi
                                        </p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="/fakultas/beasiswa" class="nav-link">
                                        <i class="nav-icon fas fa-calendar-alt"></i>
                                        <p>
                                            Periode Beasiswa
                                        </p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="/fakultas/ProgramStudiBeasiswa" class="nav-link">
                                        <i class="nav-icon fas fa-users"></i>
                                        <p>
                                            Daftar Pengajuan Beasiswa
                                        </p>
                                    </a>
                                </li>
                                <% } else if (role==='Mahasiswa' ) { %>
                                    <li class="nav-item">
                                        <a href="/mahasiswa/daftarBeasiswa" class="nav-link">
                                            <i class="nav-icon fas fa-book"></i>
                                            <p>
                                                Pengajuan Beasiswa
                                            </p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a href="/mahasiswa/status" class="nav-link">
                                            <i class="nav-icon fas fa-info-circle"></i>
                                            <p>
                                                Status Pendaftaran
                                            </p>
                                        </a>
                                    </li>
                                    <% } else if (role==='Program Studi' ) { %>
                                        <li class="nav-item">
                                            <a href="/prodi/listMahasiswa" class="nav-link">
                                                <i class="nav-icon fas fa-crown"></i>
                                                <p>
                                                    Daftar Mahasiswa
                                                </p>
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a href="/prodi/listPengajuBeasiswa" class="nav-link">
                                                <i class="nav-icon fas fa-crown"></i>
                                                <p>
                                                    Daftar Pengajuan Beasiswa
                                                </p>
                                            </a>
                                        </li>
                                        <% } %>
                                            <li class="nav-item">
                                                <a href="/logout" class="nav-link accent-blue">
                                                    <i class="nav-icon "></i>
                                                    <p>
                                                        Logout
                                                    </p>
                                                </a>
                                            </li>
            </div>
            <!-- /.sidebar -->
        </aside>
        <!-- Content Wrapper -->
        <div class="content-wrapper">
            <%- body %>
        </div>
        <!-- /.content-wrapper -->
        <!-- Footer -->
        <footer class="main-footer">
            <strong>Capstone 2</a>.</strong>
            Programming Web Lanjut
            <div class="float-right d-none d-sm-inline-block">
                <b>Study Only 2024</b>
            </div>
        </footer>
    </div>
    <!-- REQUIRED SCRIPTS -->
    <!-- Include JavaScript -->

    <!-- jQuery -->
    <script src="/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="/dist/js/adminlte.min.js"></script>
</body>

</html>
<!-- Nathan -->