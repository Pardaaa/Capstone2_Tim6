<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-bold">Data Pengaju Beasiswa
                </h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/dashboard">Home</a></li>
                    <li class="breadcrumb-item active">Pengaju Data Page</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="content">
    <div class="container-fluid">
        <div class="content">
            <div class="container-fluid">
                <% if (typeof message !=='undefined' ) { %>
                    <div id="alertMessage" class="alert alert-success">
                        <%= message %>
                    </div>
                    <% } %>
            </div>
        </div>
        <div class="card p-4">
            <div class="card-body">
                <table id="table-users" class="table table-bordered table-striped mb-5">
                    <h3 class="text-bold">List Pengaju Beasiswa</h3>
                    <thead>
                        <tr class="text-center">
                            <th class="w-25">NRP</th>
                            <th class="w-25">Nama</th>
                            <th class="w-25">Beasiswa</th>
                            <th class="w-25">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% pengajuan.forEach(pengajuan=> { %>
                            <tr>
                                <td>
                                    <%= pengajuan['User.userId'] %>
                                </td>
                                <td>
                                    <%= pengajuan['User.fullName'] %>
                                </td>
                                <td>
                                    <%= pengajuan['Beasiswa.namaBeasiswa'] %>
                                </td>
                                <td>
                                    <div class="d-flex">
                                        <form action="/prodi/dataPengajuBeasiswa/<%= pengajuan.id %>" method="get">
                                            <button type="submit" class="btn btn-info mr-2 "><i
                                                    class="fas fa-eye"></i></button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
