<!DOCTYPE html>
<html lang="en">

<head>
   <meta charset="UTF-8">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <title>Form Beasiswa</title>
   <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
   <style>
      .loading {
         display: none;
         width: 100%;
         height: 8px;
         background-color: #007bff;
         position: absolute;
         bottom: 0;
         animation: loading 2s linear infinite;
      }

      @keyframes loading {
         0% {
            left: -100%;
            width: 100%;
         }

         50% {
            left: 25%;
            width: 50%;
         }

         100% {
            left: 100%;
            width: 0;
         }
      }

      .success-notification {
         display: none;
         position: fixed;
         top: 20px;
         right: 20px;
         background-color: #28a745;
         color: white;
         padding: 10px;
         border-radius: 5px;
         z-index: 9999;
      }
   </style>
</head>

<body>
   <section class="content">
      <div class="container-fluid">
         <div class="card card-primary position-relative">
            <div class="success-notification">
               Berhasil disimpan!
            </div>
            <!-- form start -->
            <form id="beasiswaForm" action="/fakultas/beasiswa" method="post">
               <div class="card-body">
                  <div class="form-group">
                     <label for="waktu_mulai">Waktu Mulai</label>
                     <input type="datetime-local" class="form-control" id="waktu_mulai" name="waktu_mulai" required>
                  </div>
                  <div class="form-group">
                     <label for="waktu_berakhir">Waktu Berakhir</label>
                     <input type="datetime-local" class="form-control" id="waktu_berakhir" name="waktu_berakhir"
                        required>
                  </div>
               </div>
               <!-- /.card-body -->
               <div class="card-footer">
                  <button type="submit" class="btn btn-primary">Simpan</button>
               </div>
            </form>
            <div class="loading"></div>
         </div>
         <!-- /.card -->
      </div><!-- /.container-fluid -->
   </section>
   <!-- /.content -->

   <script>
      document.getElementById('beasiswaForm').addEventListener('submit', function (event) {
         event.preventDefault();

         const loadingElement = document.querySelector('.loading');
         const successNotificationElement = document.querySelector('.success-notification');

         loadingElement.style.display = 'block';
         setTimeout(function () {
            loadingElement.style.display = 'none';
            successNotificationElement.style.display = 'block';

            setTimeout(function () {
               successNotificationElement.style.display = 'none';
               document.getElementById('beasiswaForm').submit();
            }, 2000);
         }, 3000);
      });
   </script>

</body>

</html>