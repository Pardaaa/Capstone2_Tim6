<script>
    function toggleJabatan() {
        const roleValue = document.getElementById('role').value;
        const jabatanGroup = document.getElementById('jabatan-group');

        if (roleValue === 'Fakultas' || roleValue === 'Program Studi') {
            jabatanGroup.style.display = 'block';
        } else {
            jabatanGroup.style.display = 'none';
        }
    }

    window.onload = function () {
        toggleJabatan();
    };
</script>

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Tambah Users Form</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/dashboard">Home</a></li>
                    <li class="breadcrumb-item"><a href="/users">Users</a></li>
                    <li class="breadcrumb-item active">Edit Users Form</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<!-- Main content -->
<div class="content">
    <div class="container-fluid">
        <% if (typeof message !=='undefined' ) { %>
            <div id="alertMessage" class="alert alert-danger">
                <%= message %>
            </div>
            <% } %>
                <div class="card p-4">
                    <form method="post" action="/users/edit/<%= users.id %>">
                        <div class="card-body">
                            <div class="form-group">
                                <label for="username">Username</label>
                                <input type="text" class="form-control" id="username" placeholder="NathanRaphael"
                                    value="<%= users.username %>" autofocus maxlength="15" name="username">
                            </div>
                            <div class="form-group">
                                <label for="fullName">Nama Lengkap</label>
                                <input type="text" class="form-control" id="fullName"
                                    placeholder="Nathan Raphael Pardamean Hutagalung" value="<%= users.fullName %>"
                                    name="fullName" required autofocus maxlength="50">
                            </div>
                            <div class="form-group">
                                <label for="email">Email</label>
                                <input type="email" maxlength="100" class="form-control" id="email"
                                    placeholder="example@example.com" value="<%= users.email %>" name="email">
                            </div>
                            <div class="form-group">
                                <label for="Password">Password</label>
                                <input type="password" maxlength="100" class="form-control" id="Password"
                                    placeholder="Your Secret Code" name="password">
                            </div>
                            <div class="form-group">
                                <label for="confPassword">Confirm Password</label>
                                <input type="password" maxlength="100" class="form-control" id="confPassword"
                                    placeholder="Your Secret Code" name="confPassword">
                            </div>
                            <div class="form-group">
                                <label for="role">Role</label>
                                <input type="hidden" maxlength="100" class="form-control" id="role" placeholder=""
                                    value="<%= users.role %>" name="role">
                                <input type="text" maxlength="100" class="form-control" id="role"
                                    value="<%= users.role %>" name="role" disabled>
                            </div>
                            <div class="form-group" id="jabatan-group" style="display:none;">
                                <label for="jabatan">Jabatan</label>
                                <input type="hidden" maxlength="100" class="form-control" id="jabatan" placeholder=""
                                    value="<%= users.jabatan %>" name="jabatan">
                                <input type="text" maxlength="100" class="form-control" id="jabatan"
                                    value="<%= users.jabatan %>" name="jabatan" disabled>
                            </div>
                            <div class="form-group">
                                <label for="fakultas_id">ID Fakultas</label>
                                <input type="text" maxlength="100" class="form-control" id="fakultas_id" placeholder=""
                                    value="<%= users.fakultas_id %>" name="fakultas_id">
                            </div>
                            <div class="form-group">
                                <label for="prodi_id">ID Program Studi</label>
                                <input type="text" maxlength="100" class="form-control" id="prodi_id"
                                    value="<%= users.prodi_id %>" placeholder="" name="prodi_id">
                            </div>
                        </div>

                        <div>
                            <button type="submit" class="btn btn-primary">Edit</button>
                        </div>
                    </form>
                </div>
    </div>
</div><!-- /.container-fluid -->
<!-- /.content -->

<script>
    var alertElement = document.querySelector('.alert');
    setTimeout(function () {
        alertElement.style.display = 'none';
    }, 2000);
</script>