<!-- Nabilla -->
<div class="content-header">
   <div class="container-fluid">
      <div class="row mb-2">
         <div class="col-sm-6">
            <h1 class="m-0">Pengajuan Beasiswa Form</h1>
         </div>
         <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
               <li class="breadcrumb-item"><a href="/dashboard">Home</a></li>
               <li class="breadcrumb-item"><a href="/mahasiswa/daftarBeasiswa">Beasiswa</a></li>
               <li class="breadcrumb-item active">Pengajuan Beasiswa Form</li>
            </ol>
         </div>
      </div>
   </div>
</div>

<div class="content">
   <div class="container-fluid">
      <% if (typeof message !=='undefined' ) { %>
         <div id="alertMessage" class="alert alert-danger">
            <%= message %>
         </div>
         <% } %>
            <div class="card p-4">
               <form method="post" action="/mahasiswa/daftarBeasiswa/ajukanBeasiswa/<%= beasiswa.id %>"
                  enctype="multipart/form-data">
                  <div class="card-body">
                     <div class="form-group">
                        <label for="ipk">IPK</label>
                        <input type="text" class="form-control" id="ipk" placeholder="3.75" name="ipk" required
                           autofocus maxlength="4">
                     </div>
                     <div class="form-group">
                        <label for="transkripAkademik" class="col-sm-3 col-form-label">Transkrip Akademik</label>
                        <div class="custom-file">
                           <input type="file" class="custom-file-input" id="transkripAkademik" name="transkripAkademik"
                              required accept="application/pdf">
                           <label class="custom-file-label" for="transkripAkademik">No file chosen</label>
                        </div>
                     </div>
                     <div class="form-group">
                        <label for="suratRekomendasiDosen" class="col-sm-3 col-form-label">Surat Rekomendasi
                           Dosen</label>
                        <div class="custom-file">
                           <input type="file" class="custom-file-input" id="suratRekomendasiDosen"
                              name="suratRekomendasiDosen" required accept="application/pdf">
                           <label class="custom-file-label" for="suratRekomendasiDosen">No file chosen</label>
                        </div>
                     </div>
                     <div class="form-group">
                        <label for="suratPernyataanBeasiswa" class="col-sm-3 col-form-label">Surat Pernyataan
                           Beasiswa</label>
                        <div class="custom-file">
                           <input type="file" class="custom-file-input" id="suratPernyataanBeasiswa"
                              name="suratPernyataanBeasiswa" required accept="application/pdf">
                           <label class="custom-file-label" for="suratPernyataanBeasiswa">No file chosen</label>
                        </div>
                     </div>
                     <div class="form-group">
                        <label for="suratPelengkap" class="col-sm-3 col-form-label">Surat Pelengkap</label>
                        <div class="custom-file">
                           <input type="file" class="custom-file-input" id="suratPelengkap" name="suratPelengkap"
                              required accept="application/pdf">
                           <label class="custom-file-label" for="suratPelengkap">No file chosen</label>
                        </div>
                     </div>
                  </div>
                  <div>
                     <button type="submit" class="btn btn-primary">Submit</button>
                  </div>
               </form>
            </div>
   </div>
</div>
<script>
   document.querySelectorAll('.custom-file-input').forEach(input => {
      input.addEventListener('change', function () {
         let fileName = this.files[0].name;
         let nextSibling = this.nextElementSibling;
         nextSibling.innerText = fileName;
      });
   });
</script>
<script>
   var alertElement = document.querySelector('.alert');

   setTimeout(function () {
      alertElement.style.display = 'none';
   }, 2000);
</script>
