       <div class="content mt-5">
          <div class="container-fluid">
             <div class="card p-4">
                <div class="card-body">
                   <h1 class="text-center">Maaf, belum ada pendaftaran beasiswa yang dibuka.
                   </h1>
                </div>
             </div>
          </div>
       </div>
       <% } else { %>
          <div class="content-header">
             <div class="container-fluid">
                <div class="row mb-2">
                   <div class="col-sm-6">
                      <h1 class="m-0 text-bold">List Beasiswa</h1>
                   </div>
                   <div class="col-sm-6">
                      <ol class="breadcrumb float-sm-right">
                         <li class="breadcrumb-item"><a href="/dashboard">Home</a></li>
                         <li class="breadcrumb-item active">Beasiswa Data Page</li>
                      </ol>
                   </div>
                </div>
             </div>
          </div>
 
          <div class="content">
             <div class="container-fluid">
                <div class="content">
                   <div class="container-fluid">
                      <% if (typeof message !=='undefined' ) { %>
                         <div id="alertMessage" class="alert alert-success">
                            <%= message %>
                         </div>
                         <% } %>
                   </div>
                </div>
                <div class="card p-4">
                   <div class="card-body">
                      <table id="table-users" class="table table-bordered table-striped">
                         <caption>List of Beasiswa</caption>
                         <thead>
                            <tr class="text-center">
                               <th>Nama Beasiswa</th>
                               <th>Jenis Beasiswa</th>
                               <th>Waktu Dimulai</th>
                               <th>Waktu Berakhir</th>
                               <th>Status</th>
                               <th>Action</th>
                            </tr>
                         </thead>
                         <tbody>
                            <% Beasiswa.forEach(beasiswa=> { %>
                            <tr>
                               <td>
                                  <%= beasiswa.namaBeasiswa %>
                               </td>
                               <td>
                                  <%= beasiswa.namaBeasiswa %>
                               </td>
                               <td>
                                  <%= beasiswa.namaBeasiswa %>
                               </td>
                               <td>
                                  <%= beasiswa.jenisBeasiswa %>
                               </td>
                               <td class="text-center">
                                  <% if (beasiswa.status==='Belum Berlangsung' ) { %>
                                     <span class="badge badge-warning">Belum Berlangsung</span>
                                     <% } else if (beasiswa.status==='Selesai' ) { %>
                                        <span class="badge badge-danger">Selesai</span>
                                        <% } else if (beasiswa.status==='Berlangsung' ) { %>
                                           <span class="badge badge-success">Berlangsung</span>
                                           <% } %>
                               <td>
                                  <div class="d-flex">
                                     <form action="/mahasiswa/daftarBeasiswa/views/<%= beasiswa.id %>" method="get">
                                        <button type="submit" class="btn btn-info mr-2 "><i
                                              class="fas fa-eye"></i></button>
                                     </form>
                                     <form action="/mahasiswa/daftarBeasiswa/ajukanBeasiswa/<%= beasiswa.id %>"
                                        method="get">
                                        <button type="submit" class="btn btn-warning mr-2 text-bold">Ajukan
                                           Beasiswa</button>
                                           <% } %>
                                     </form>
                                  </div>
                               </td>
                            </tr>
                         </tbody>
                      </table>
                   </div>
                </div>
             </div>
          </div>
          
                <script>
                   document.addEventListener('DOMContentLoaded', function () {
                      var alertElement = document.querySelector('.alert');
                      if (alertElement) {
                         setTimeout(function () {
                            alertElement.style.display = 'none';
                         }, 2000);
                      }
                   });
                </script>
                <!-- Nabilla -->